<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sopaletrasgui.IntroController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Wellcome to the Word Search Generator App" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Type the words separated by commas" />
      <TextField fx:id="insertWords" alignment="CENTER" promptText="Words" />
      <Button fx:id="generatePuzzle" alignment="CENTER" mnemonicParsing="false" onAction="#onMouseClick" text="Generate new Puzzle" />
      <Button fx:id="oldgame" mnemonicParsing="false" onAction="#onMouseClick2" text="Play old game" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
