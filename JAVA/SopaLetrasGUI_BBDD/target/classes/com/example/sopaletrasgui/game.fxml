<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sopaletrasgui.GameController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Word Search App" />
      <GridPane fx:id="cuadricula" alignment="CENTER" gridLinesVisible="true" prefHeight="300.0" prefWidth="300.0">
      </GridPane>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter the words to find" />
      <TextField fx:id="tryWords" alignment="CENTER" promptText="Word" />
      <Button fx:id="Try" mnemonicParsing="false" onAction="#onButtonClick" text="Try" />
      <Button fx:id="saveb" mnemonicParsing="false" onAction="#Save" text="Save and Quit" />
   </children>
   <opaqueInsets>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
